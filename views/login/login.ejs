<html lang="pt-BR">
    <head>
        <meta charset="utf-8">
        
        <title>Login</title>

        <!-- Bootstrap core CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <!-- Favicons -->
        <meta name="theme-color" content="#7952b3">

        <style>
            .bd-placeholder-img {
                font-size: 1.125rem;
                text-anchor: middle;
                -webkit-user-select: none;
                -moz-user-select: none;
                user-select: none;
            }

            @media (min-width: 768px) {
                .bd-placeholder-img-lg {
                font-size: 3.5rem;
                }
            }
        </style>
        
        <!-- Custom styles for this template -->
        <link href="/stylesheets/signin.css" rel="stylesheet">
    </head>
  <body class="text-center">
    <% if (msg) { %>
        <div class="row fixed-top mt-3 mx-3">
            <div class="col">
                <div class="alert <%- msgInd == 0 ? 'alert-success':'alert-danger' %>" role="alert">
                    <%= msg %> 
                </div>
            </div>
        </div>
    <% } %>
    <main class="form-signin">
        <form action="/login" method="POST">
            <h1 class="h3 mb-3 fw-normal">Por favor, logue</h1>
            <div class="form-floating">
                <input type="text" class="form-control" id="usr" placeholder="usuario.exemplo" name="usr" autocomplete="username" required>
                <label for="usr">Usuário</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="psw" placeholder="Senha" name="psw" autocomplete="current-password" minlength="5" required >
                <label for="psw">Senha</label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Entrar</button>
            <p class="mt-1 mb-3 text-muted">© 2020–2021</p>
        </form>
    </main>
  </body>
</html>