<html lang="pt-BR">
    <head>
        <meta charset="utf-8">
        
        <title>Registro</title>

        <!-- Bootstrap core CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <!-- Favicons -->
        <meta name="theme-color" content="#7952b3">

    </head>
  <body class="text-center">
    <% if (msg) { %>
        <div class="row mt-3 mx-3">
            <div class="col">
                <div class="alert <%- msgInd == 0 ? 'alert-success':'alert-danger' %>" role="alert">
                    <%= msg %> 
                </div>
            </div>
        </div>
    <% } %>
    <div class="form-signin row">
        <div class="col mx-5">
            <form action="/register" method="POST">
                <h1 class="h3 mb-3 fw-normal">Insira os dados para se registar.</h1>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="usr" placeholder="usuario.exemplo" name="usr" autocomplete="username" required>
                    <label for="usr">Usuário(Será usado para entrar no sistema)</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="psw" placeholder="Senha" name="psw" autocomplete="current-password" minlength="5" required>
                    <label for="psw">Senha</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="nam" placeholder="Nome Completo" name="nam" autocomplete="name" required>
                    <label for="nam">Nome</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="eml" placeholder="exemplo@exemplo.com" name="eml" autocomplete="email" required>
                    <label for="eml">E-mail</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="cpf" placeholder="999.999.999-99" name="cpf" minlength="11" maxlength="11" required>
                    <label for="cpf">CPF</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="nrg" placeholder="555555555" name="nrg" required>
                    <label for="nrg">RG</label>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Registrar</button>
                <p class="mt-1 mb-3 text-muted">© 2020–2021</p>
            </form>
        </div>
    </div>
  </body>
</html>